<Page x:Class="ProjecteBotigaSabates.Views.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjecteBotigaSabates.Views" xmlns:components="clr-namespace:ProjecteBotigaSabates.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" >
            <TextBlock Text="BreadCrumbs" x:Name="BreadCrumbs" ></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Label Content="Search: " />
            <TextBox x:Name="tb_search" VerticalContentAlignment="Center" Width="200" Margin="0 0 20 0" KeyUp="Button_Search_Click" HorizontalAlignment="Center"></TextBox>
            <Button Content="Search" Width="80" Click="Button_Search_Click" HorizontalAlignment="Center"></Button>
        </StackPanel>
        
        
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            

            <!--Filtres de rang, color, preu ... -->
            <TextBlock Text="Filtres" Grid.Row="0"></TextBlock>
            <StackPanel Orientation="Vertical" Grid.Row="1">
                <TextBlock x:Name="sl_price_val" />
                <Slider Margin="10, 0, 0, 0" 
                    Width="100" Orientation="Horizontal" HorizontalAlignment="Left" 
                    Value="50" Minimum="0" Maximum="100" 
                    SmallChange="1" LargeChange="10"
                    TickPlacement="BottomRight" TickFrequency="10"
                    ValueChanged="sl_price_ValueChanged"
                    x:Name="sl_price"/>
            
            </StackPanel>

            <TreeView x:Name="trv_categories" Grid.Row="2" ></TreeView>
        </Grid>

        <ListView x:Name="lv_products" ItemsSource="{Binding Products}" Grid.Column="2" Grid.Row="1" Margin="10" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionMode="Single" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Focusable" Value="False"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>

                    
                </Style>
            </ListView.ItemContainerStyle>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <components:UCProduct Height="300" Margin="10" MyProd="{Binding}" ></components:UCProduct>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            
        </ListView>

        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Margin="10" Content="Previous" Click="Button_Previous_Click" />
            <TextBlock Grid.Column="2" Margin="10" x:Name="tb_page" Text="0" />
            <TextBlock Grid.Column="3" Margin="10" x:Name="tb_max_page" Text="/0" />
            <Button Grid.Column="4" Margin="10" Content="Next" Click="Button_Next_Click"/>

        </Grid>
        
    </Grid>
</Page>
